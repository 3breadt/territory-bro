FROM openjdk:8-jdk AS builder

# tools
ADD https://raw.githubusercontent.com/technomancy/leiningen/stable/bin/lein /usr/local/bin/lein
RUN chmod 755 /usr/local/bin/lein

# working directory
RUN useradd --create-home app && \
    mkdir -p /project && \
    chown app /project
WORKDIR /project
USER app

# cache Leiningen dependencies
COPY --chown=app project.clj /project/
RUN lein deps

# do the build
COPY --chown=app . /project/
RUN lein uberjar

# ------------------------------------------------------------

FROM openjdk:8-jre-slim

RUN adduser --system --home /app app
WORKDIR /app
USER app

EXPOSE 8080
ENV PORT=8080 \
    DATABASE_URL="jdbc:postgresql://localhost/territorybro?user=territorybro&password=territorybro"
CMD ["java", "-Xmx50m", "-XX:MaxMetaspaceSize=64m", "-jar", "territory-bro.jar"]

COPY --from=builder /project/target/territory-bro.jar /app/territory-bro.jar
