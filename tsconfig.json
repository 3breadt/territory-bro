{
  "compilerOptions": {
    "outDir": "target/typescript",
    "target": "ES6",
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ]
  }
}
